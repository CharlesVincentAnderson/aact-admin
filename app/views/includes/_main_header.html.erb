<div id='navbar-top' class="navbar navbar-top ">
  <% if user_signed_in? %>
      <p class='user-logged-in'>logged in as <%= current_user.full_name %></p>
    <p class='user-info'>
      <%= link_to "Edit Profile", edit_user_registration_path %>
      &nbsp;&nbsp;
      <%= link_to "Sign out", edit_user_registration_path('sign-out'), :id => current_user %>
    </p>
  <% else %>
    <p class='user-info'>
      <%= link_to "Sign up", new_user_registration_path, class: 'btn dropdown-toggle' %>
      <%= link_to "Sign in", new_user_session_path %>
    </p>
  <% end %>
</div>

<div class="wrap">
  <%= link_to("https://www.ctti-clinicaltrials.org/") do %>
    <%= image_tag("full_logo.jpg", class:"logo",  height: '120', width: '300') %>
  <% end %>

  <div class="navContainer">
    <nav>
      <a href="/" class="navItem">
        <%= fa_icon("home") %>
        Home
      </a>

      <a href="/connect" class="navItem">
        <%= fa_icon("plug") %>
        Connect
      </a>

      <a href="/download" class="navItem">
        <%= fa_icon("download") %>
        Download
      </a>

      <a href="/learn_more" class="navItem">
        <%= fa_icon("university") %>
        Learn
      </a>

    </nav>
  </div>
</div>

<% if PublicAnnouncement.count > 0 %>
  <section class='basicHero'>
  <div class='copy announcement'>
    <h1 class='announcement'>Announcement</h1>
    <div class='wrap'>
      <ul class='announcement'>
        <% PublicAnnouncement.all.each do |announcement| %>
          <li><%= announcement.description %></li>
        <% end %>
      </ul>
    </div>
  </div>
  </section>
<% end %>
