javascript_include_tag "sortable"

<div>

  <section class='users'>
    <div class="basicHero">
      <h1> <%=number_with_delimiter(@user_count, :delimiter => ',') %> AACT Users</h1>

      <p class='options'>
        Download:
        <%= link_to "CSV", users_path(format: "csv") %> |
        <%= link_to "Excel", users_path(format: "xls") %>
      </p>

      <table id='userTable' class='regularDisplay sortable table-sriped table-responsive table-hover'>

          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>UserName</th>
              <th>Confirmed</th>
              <th>DB Activity</th>
              <th>Last DB Activity</th>
            </tr>
          <thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.full_name %></td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td><%= user.display_confirmed_at %></td>
                <td align='center'><%= user.db_activity %></td>
                <td><%= user.display_last_db_activity %></td>
              </tr>
            <% end %>
         </tbody>

      </table>

    </div>
  </section>

</div>
