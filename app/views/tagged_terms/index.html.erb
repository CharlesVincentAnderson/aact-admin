<%= javascript_include_tag :sortable %>
<%=  stylesheet_link_tag "bootstrap.min.css" %>
<%=  stylesheet_link_tag "bootstrap.override.css" %>
<section>

  <script>
    function loadData(){
      $(function () {
        alert('sdfs');
        $('#taggedStudies').bootstrapTable({});
      });
    }
  </script>

  <div id='selectTag'>
    <%= collection_select(:tag, :label, @all_tags, :label, :label) %>
  </div>

  <div class="tagged_terms">
    <div>
      <p>Studies tagged: <%= @selected_tag.label %></p>
    </div>

    <table id='taggedStudies' class="table sortable table-striped table-responsive table-hover regularDisplay" data-sort-order="desc">

        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Phase</th>
            <th>Start Date</th>
            <th></th>
          </tr>
        </thead>

        <tbody class='tagged_terms'>
          <% @studies.each do |s| %>
            <tr>
              <td><%= s.nct_id %></td>
              <td><%= s.brief_title %></td>
              <td><%= s.study_type %></td>
              <td><%= s.phase %></td>
              <td><%= s.start_date %></td>
              <td><%= link_to 'Detail', tagged_term_path(:id => s.id) %></td>
            </tr>
          <% end %>
       </tbody>

    </table>

  </div>
  <p><%= render 'includes/circle_buttons' %></p>

</section>

